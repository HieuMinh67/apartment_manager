{% extends '@!EasyAdmin/layout.html.twig' %}
{% block header_logo %}
    <a class="logo logo-long" title="" href="/admin">
        <img class="w-25" src="{{ asset('images/long_logo.png') }}">
    </a>
{% endblock %}
{% block content_title %}
    Change Password
{% endblock %}
{% block main %}
    <div class="content-panel">
        <div class="content-panel-body with-background without-header without-footer">
            <form method="post" action="{{ path('change_password') }}">
                <div class="field-text form-group">
                    <label class="form-control-label required">Current Password</label>
                    <div class="form-widget">
                        <input name="_old_password" type="password" class="form-control">
                    </div>
                </div>
                <div class="field-text form-group">
                    <label class="form-control-label required">New Password</label>
                    <div class="form-widget">
                        <input name="_new_password" type="password" class="form-control">
                    </div>
                </div>
                <div class="field-text form-group">
                    <label class="form-control-label required">Re-type New Password</label>
                    <div class="form-widget">
                        <input name="_retype_new_password" type="password" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="w-25">
                        <input type="reset" class="btn float-right">
                    </div>
                    <div class="form-widget">
                        <button class="action-saveAndReturn btn btn-primary action-save" type="submit">
                            <span class="btn-label">Save</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}