{% extends 'base.html.twig' %}

{% block title %}Quotation index{% endblock %}

{% block body %}
    <h1>Quotation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quotation in quotations %}
            <tr>
                <td>{{ quotation.id }}</td>
                <td>{{ quotation.name }}</td>
                <td>{{ quotation.phone }}</td>
                <td>{{ quotation.email }}</td>
                <td>{{ quotation.message }}</td>
                <td>
                    <a href="{{ path('quotation_show', {'id': quotation.id}) }}">show</a>
                    <a href="{{ path('quotation_edit', {'id': quotation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('quotation_new') }}">Create new</a>
{% endblock %}
